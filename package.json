{
  "name": "reciparse",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:backend": "convex dev",
    "dev:frontend": "vite dev --open --host",
    "build": "pnpm run check && vite build",
    "preview": "vite preview",
    "test": "vitest run --watch",
    "check": "npm-run-all --parallel check:*",
    "check:deps": "pnpm install --frozen-lockfile --prefer-offline",
    "check:ultracite": "ultracite check",
    "check:types": "tsc --tsBuildInfoFile .tsbuildinfo --incremental",
    "check:knip": "knip",
    "check:test": "vitest run",
    "fix": "npm-run-all --parallel fix:*",
    "fix:ultracite": "ultracite fix",
    "fix:knip": "knip --fix --format",
    "fix-unsafe": "npm-run-all --parallel fix-unsafe:*",
    "fix-unsafe:ultracite": "ultracite fix --unsafe",
    "fix-unsafe:knip": "knip --fix --allow-remove-files --format"
  },
  "dependencies": {
    "@base-ui/react": "^1.1.0",
    "@convex-dev/workflow": "^0.3.4",
    "@fontsource-variable/noto-sans": "^5.2.10",
    "@openrouter/ai-sdk-provider": "^2.2.1",
    "@tailwindcss/vite": "^4.0.6",
    "@tanstack/react-devtools": "^0.7.0",
    "@tanstack/react-query": "^5.90.20",
    "@tanstack/react-router": "^1.132.0",
    "@tanstack/react-router-devtools": "^1.132.0",
    "@tanstack/react-start": "^1.132.0",
    "ai": "^6.0.77",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.31.7",
    "lucide-react": "^0.563.0",
    "nitro": "npm:nitro-nightly@latest",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "shadcn": "^3.8.4",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.0.6",
    "tw-animate-css": "^1.4.0",
    "vite-tsconfig-paths": "^6.0.2",
    "zod": "^4.3.6"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=8.0.0"
  },
  "engineStrict": true,
  "packageManager": "pnpm@9.15.4",
  "volta": {
    "node": "22.14.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@tanstack/devtools-vite": "^0.3.11",
    "@types/node": "^22.19.8",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^5.0.4",
    "jsdom": "^27.0.0",
    "knip": "^5.83.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "ultracite": "7.1.4",
    "vite": "^7.1.7",
    "vitest": "^3.0.5"
  }
}
